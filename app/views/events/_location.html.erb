<section class='location-wrapper'>
  <div class='location-change'>
    Change Locations
  </div>

  <form class='location-current' action='/events' method='post' data-remote='true'>
    <% @locationsToggle.each do |location| %>
      <input type='submit' class='location-option <%= location[1] %>' name='locationClicked' value='<%= location[0] %>'>

      <input type='hidden' name='<%= location[0] %>' value='<%= location[1] %>'>

    <% end %>    
  </form>

</section>


<div id='popup-bg' class='hide'></div>

<div id='location-popup-wrapper'>

  <div id='location-popup' class='hide'>

    <div class='popup-close'>
      x
    </div>

    <div class='location-title'>
      Add Locations
    </div>

    <div class='search-wrapper'>
      <input class='search-box' type='text' placeholder='Search for city or state'>
      <div class='search-submit'></div>
    </div>

    <div class='location-preselect'>
      <%= render 'states_dropdown' %>
      <%= render 'canada_dropdown' %>
      <%= render 'cities_dropdown' %>
    </div>

    <div class='location-remove-title'>
      Remove Locations
    </div>

    <form class='location-added' action='/events' method='post' data-remote='true'>
      <input type='hidden' name='_method' value='PUT'>
      
      <div class='location-item-wrapper'>
        <% @locationsAdded.each do |location| %>
          <div class='location-item'>
            <input type='checkbox' name='<%= location %>' checked='checked'>
            <label for='<%= location %>'></label>
            <%= location %>

            <input type='hidden' name='<%= location %>_current' value='current'>

          </div>
        <% end %>
      </div>

      <input type='submit' id='submit' class='done' value='Done'>
    </form>




  </div>

</div>
