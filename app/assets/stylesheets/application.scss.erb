 @import "bootstrap";

 /* 
 General Styling
 */

body {
  background-color: black;
}

.page {
  position: relative;
  padding: 0 5%;
  margin: 0 auto;
  max-width: 1000px;
}

/*
Nav Styling
*/

.tabs {
  position: relative;
}

.tabs span {
  vertical-align: -17px;
}

.tab-cities,
.tab-festivals,
.tab-tours {
  display: inline-block;
  height: 55px;

  color: #a0dddd;
  font-weight: 900;
}

.tab-cities {
  padding-left: 42px;

  background: url(<%= asset_path 'cities.png' %>) no-repeat;
  background-size: auto 33px;
  background-position: 10px center;
}

.tab-festivals {
  margin-left: 50px;
  padding-left: 50px;

  background: url(<%= asset_path 'festivals.png' %>) no-repeat;
  background-size: auto 33px;
  background-position: 10px center;
}

.tab-tours {
  margin-left: 50px;
  padding-left: 50px;

  background: url(<%= asset_path 'tours.png' %>) no-repeat;
  background-size: auto 35px;
  background-position: 10px center;
}

.logo {
  position: absolute;
  top: 0;
  right: 5px;
  width: 45px;
  height: 45px;
  margin-top: 6px;

  background: transparent url(<%= asset_path 'logo.png' %>) no-repeat center center;
  background-size: contain;
}

.tab-cities,
.tab-festivals,
.tab-tours,
.logo:hover {
  cursor: pointer,
}


/*
Change Locations Styling
*/

.location-wrapper {
  width: 100%;
  padding: 13px 0 8px 8px;
  z-index: 1;

  color: #ccc;
  background: url(<%= asset_path 'bg.png' %>) no-repeat top left;
  background-size: 100% 100%;
}

.location-change {
  display: inline-block;
  padding-right: 19px;

  background: url(<%= asset_path 'arrow_right.png' %>)no-repeat center right;
  background-size: auto 15px;
}

.location-change:hover {
  cursor: pointer;
}

.location-current {
  margin-top: 10px;

  font-size: 1.2rem;
  font-weight: 700;
}

.location-option {
  padding: 0;
  margin-right: 20px;

  color: #ccc;
  background-color: transparent;
  border: none;
  font-size: 1.2rem;
  font-weight: 700;
}

.location-option:hover {
  cursor: pointer;
}

.inactive {
  opacity: 0.35;
}

#popup-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 998;

  opacity: 0.6;
  background-color: black;
}

#location-popup-wrapper {
  position: relative;
  display: flex;
  justify-content: center;

  font-size: .8rem;
}

#location-popup {
  position: absolute;
  width: 75%;
  padding: 10px 25px 15px;
  z-index: 999;

  border-radius: 10px;
  background-color: #ddd;
  text-align: center;
}

.popup-close {
  position: absolute;
  top: -7px;
  right: -7px;
  width: 28px;
  height: 28px;
  padding: 7px;

  background: #ddd;
  border-radius: 15px;
}

.popup-icon {
  width: 100%;
  height: 100%;

  background: url(<%= asset_path'x.png' %>) no-repeat center right;
  background-size: auto 13px;
}

.popup-close:hover {
  cursor: pointer;
}

.location-title,
.location-remove-title {
  margin-left: 15px;
  margin-bottom: 5px;

  text-align: left;
  font-size: .9rem;
}

.location-remove-title {
  margin-top: 15px;
}

.search-wrapper {
  position: relative;
}

.search-wrapper input[type='text'] {
  width: 100%;
  padding: 11px 15px;

  border: none;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  background-color: white;
}

.search-submit {
  position: absolute;
  top: 0;
  right: 0;
  height: 100%;
  width: 42px;

  background: url(<%= asset_path 'search_icon.png' %>) no-repeat center center;
  background-size: auto 20px;
  border-top-right-radius: 5px;
}

.search-submit:hover {
  cursor: pointer;
}

.location-preselect {
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.states,
.canada,
.cities {
  display: inline-block;
  width: 33.33%;
  padding: 10px 0;

  background-color: white;
}

.location-preselect span:hover {
  cursor: pointer;
}

.states,
.canada {
  border-right: 1px solid #ddd;
}

.states {
  border-bottom-left-radius: 5px;
}

.cities {
  border-bottom-right-radius: 5px;
}

.location-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 10px 0;

  border-bottom: 1px solid #ddd;
  background-color: white;
  text-align: left;
}

.location-item:hover {
  cursor: pointer;
}

.location-item:first-child {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.location-item:last-child {
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

/*
Form and Checkbox Styling
*/

input[type=checkbox] {
  visibility: hidden;
  margin: 0 14px;
}

.location-item label {
  position: absolute;
  top: 11px;
  left: 11px;
  width: 18px;
  height: 18px;

  cursor: pointer;
  border: 1px solid #c08;
  border-radius: 4px;
}

.location-item input[type=checkbox]:checked + label {
  background-color: #c08;
}


.done {
  float: right;
  padding: 5px 25px;
  margin-top: 25px;

  border-radius: 5px;
  background-color: white;
}

.done:hover {
  cursor: pointer;
}

/*
Dropdown Styling
*/


.dropdown-menu {
  max-height: 200px;
  min-width: 0;
  width: 95%;
  overflow: scroll;
}

.dropdown-item {
  padding: 0 0 0 8px;

  font-size: .8rem;
}
.dropdown-item:hover {
  background-color: #33cccc;
}

/*
Event Slider Styling
*/

.recent-title {
  padding-left: 30px;

  color: white;
  font-size: .9rem;
  background: #008585 url(<%= asset_path 'bg_recent.png' %>) no-repeat;
  background-size: 100% 100%;
}

.recent-slider-frame {
  position: relative;
  overflow: hidden;
}

.slide-left {
  position: absolute;
  top: 0;
  left: 0;
  width: 40px;
  height: 100%;

  background: black url(<%= asset_path 'slide_left.png' %>) no-repeat;
  background-size: auto 22px;
  background-position: 10px center;
  z-index: 2;
}

.slide-right {
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;
  height: 100%;

  background: black url(<%= asset_path 'slide_right.png' %>) no-repeat;
  background-size: auto 22px;
  background-position: 10px center;
  z-index: 2;
}

.slide-left,
.slide-right {
  cursor: pointer;
}


.recent-slider {
  height: 110px;
}

.event-slide {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 240px;
  height: 100%;
  float: left;
}

.event-slide {
  cursor: pointer;
}

.slide-bg {
  position: absolute;
  width: 100%;
  height: 100%;

  background-image: url(<%= asset_path 'zhu.jpg' %>);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: 50% 40%;
  opacity: 0.3;
  z-index: 1;
}

.slide-date,
.slide-title,
.slide-venue {
  text-align: center;
  z-index: 2;
}

.slide-date,
.slide-venue {
  color: #aaa;
  font-size: .8rem;
}

.slide-title {
  color: #d5d5d5;
}

.slide-sep {
  position: absolute;
  width: 2px;
  height: 100%;
  top: 0;
  right: -1px;
  
  background: url(<%= asset_path 'slide_sep.png' %>) no-repeat;
  background-size: 2px 100%;
  z-index: 1;
}

/*
Filter bar Styling
*/

.filter-wrapper {
  position: relative;
  margin: 15px 0 20px;
}

.filter-icon-bg,
.filter-icon,
.filter-x {
  position: absolute;
  top: 0;
  left: 0;
  width: 40px;
  height: 32px;
  padding-right: 5px;

  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.filter-icon-bg {
  background-color: #555;
}

.filter-icon {
  background: #555 url(<%= asset_path 'search_icon.png' %>) no-repeat center center;
  background-size: auto 20px;
}

.filter-x {
  filter: brightness(3.5);

  background: url(<%= asset_path 'x.png' %>) no-repeat center center;
  background-size: auto 20px;
}

.filter-icon:hover {
  cursor: pointer;
}

.filter-wrapper input[type='text'] {
  width: 100%;
  height: 32px;
  padding-left: 44px;

  color: #0aa;
  background: transparent;
  border: 1px solid #222;
  font-size: .9rem;
  border-radius: 5px;
}

.filter-box::placeholder {
  color: #a5a5a5;
}

.no-match {
  margin-top: 6%;

  text-align: center;
  color: #ccc;
}




/*
Event List Styling
*/

.no-events {
  margin-top: 25%;

  color: #ccc;
  font-size: 1rem;
  text-align: center;
}

.day {
  margin: 21px 0 5px 20px;

  color: #ddb0a0;
  border-bottom: 1px solid #ddb0a0;
}

.event {
  position: relative;
  margin-bottom: 12px;
}

.event:hover {
  cursor: pointer;
}

.event-pic {
  position: absolute;
  width: 59px;
  height: 59px;

  background-image: url(<%= asset_path 'avicii.jpg' %>);
  background-size: 100% auto;
}

.event-title {
  padding-top: 8px;
}

.event-title,
.event-details {
  margin-left: 69px;
}

.event-title,
.event-more {
  color: #ccc;
  font-size: 1rem;
}

.event-details {
  color: #999;
  font-size: .8rem;
}

.arrow {
  position: absolute;
  width: 49px;
  height: 49px;
  top: 5px;
  right: 0;
  opacity: 0.5;

  background: url(<%= asset_path 'arrow_right.png' %>) no-repeat;
  background-position: 25px 13px;
  background-size: auto 15px;
}

.event-more {
  margin-top: 20px;
  margin-bottom: 32px;
  font-size: .8rem;
}

.event-links {
  padding-bottom: 16px;
  margin-bottom: 16px;

  border-bottom: 1px solid #ddd;
  text-align: center;
}

.event-links span {
  display: inline-block;
  width: 44%;  
  padding: 5px;

  background-color: #333;
}

.soundcloud-links {
  margin-bottom: 10px;
}

.soundcloud-links span,
.hotel-links span {
  display: inline-block;
  width: 25%;  
  padding: 2px;

  background-color: #333;
  text-align: center;
}


/*
Hide Styling
*/

.hide {
  display: none;
}